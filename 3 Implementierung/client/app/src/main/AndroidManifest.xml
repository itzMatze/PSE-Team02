<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.kit.mensameet.client.view">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".SelectLinesActivity"
            android:label="@string/title_select_lines"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SelectGroupActivity"
            android:label="@string/title_select_group"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".CreateGroupActivity"
            android:label="@string/title_create_group"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".GroupJoinedActivity"
            android:label="@string/title_group_joined"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ShowUserActivity"
            android:label="@string/title_general_user_profile"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".UserActivity"
            android:label="@string/title_user_profile">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".HomeActivity"
            android:theme="@style/HiddenTitleTheme">
        </activity>

        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/login_button_title">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".BeginActivity"
            android:theme="@style/HiddenTitleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--only for testing, todo: edit it later-->
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"
            android:label="@string/register">

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SetTimeActivity"
            android:label="@string/title_set_time">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>